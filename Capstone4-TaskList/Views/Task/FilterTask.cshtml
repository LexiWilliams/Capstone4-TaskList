
@{
    ViewData["Title"] = "FilterTask";
}

<h1>Filter Tasks</h1>
<form action="FilterKeyword" method="post">
    Filter by key word <br /><input type="text" name="searchString" id="searchString" />
    <input type="submit" name="FilterKeyword" value="Filter" />
</form>
<form action="FilterDate" method="post">
    Filter by due date: task due by <br /><input type="date" name="searchDate" />
    <input type="submit" name="FilterDate" value="Filter" />
</form>
<form action="FilterCompleted" method="post">
    Filter by completion status
    <br /><select name="searchString">
        <option value="True">True</option>
        <option value="False">False</option>
    </select>
    <input type="submit" name="FilterCompleted" value="Filter" />
</form>


