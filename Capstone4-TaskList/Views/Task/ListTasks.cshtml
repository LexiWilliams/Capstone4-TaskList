
@{
    ViewData["Title"] = "ListTasks";
}
@model IEnumerable<Capstone4_TaskList.Models.Tasks>
@using Microsoft.AspNetCore.Http


<h1>Tasks</h1>

<table class="table">
    <tr>
        <th>Task</th>
        <th>Due Date</th>
        <th>Completed</th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td>@item.Description</td>
    <td>@item.DueDate</td>
    <td>@item.Completed</td>
    <td>@Html.ActionLink("Mark Complete", "CompleteTask", "Task", item)</td>
    <td>@Html.ActionLink("Delete Task", "DeleteTask", "Task", item)</td>
</tr>
    }
</table>
<td>@Html.ActionLink("Add Task", "AddTask", "Task")</td>
<td>@Html.ActionLink("Search Tasks", "FilterTask", "Task")</td>